            <AppBarButton Icon="Refresh" Label="Configure background"  Click="ImagesButton_Click" />
        </CommandBar>

        <FlipView ItemsSource="{x:Bind ImagesDeviceIcons}"  Width="200" Height="200" Margin="20" HorizontalAlignment="Right"  >
